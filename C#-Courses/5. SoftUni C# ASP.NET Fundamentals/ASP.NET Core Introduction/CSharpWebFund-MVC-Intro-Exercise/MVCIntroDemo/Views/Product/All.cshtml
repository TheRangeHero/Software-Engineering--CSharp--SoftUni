@using MVCIntroDemo.ViewModels.Product;
@model IEnumerable<ProductViewModel>

@{
    ViewData["Title"] = "All Products";
}

<div class="card" style="width: 18rem">
    <div class="card-header">@ViewData["Title"]</div>
    <ul class="list-group list-group-flush">
        @foreach(ProductViewModel product in Model)
        {
            <li class="list-group-item">
                <a asp-controller="Product" asp-action="ByID" asp-route-id="@product.Id">@product.Name - @product.Price$
                </a>
                </li>
        }
    </ul>
</div>

<div class="row">
    <a class="btn btn-primary" style="width: 8rem" asp-controller="Product" asp-action="DownloadProductsInfo">Download products info</a>
</div>